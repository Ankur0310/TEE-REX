<% layout('layouts/boilerplate') %>
<link rel="stylesheet" href="/stylesheets/indexp.css">
    <div class="imgbg">
      <div>
        <!-- <img src="https://res.cloudinary.com/cloud0310/image/upload/v1662127872/Tee-Rex/bnn_skyt0y.jpg" class="img-fluid" alt="..."> -->
          <h1 class="text-center">All Tshirts Design</h1><br>
      </div>
  
      
      <div class='cards_tshirt d-flex justify-content-around flex-wrap mb-3 crd'>
              <% for(let tshirt of tshirts ) {%>
                  <div class="card mb-3 " style="width: 18rem">
                      <img src="<%= tshirt.images[0].url %> " class="card-img-top" alt="...">
                      <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= tshirt.title %> </h5>
                        <div class="d-flex justify-content-center">
                          <h4 class="text-danger"> - <%= tshirt.discount %>% </h4>
                          <h4 class="mx-2"> <b> &#8377;<%= tshirt.sprice %> </b> </h4>
                          <h6 class="text-muted my-1"> <s>&#8377;<%= tshirt.price %> </s></h6>
                        </div> 
                          <% if(tshirt.status==='1'){ %>
                            <a href="/tshirts/<%= tshirt._id %>" class="btn btn-primary mt-auto">Order</a>
                            <% }else { %> 
                              <h3 class="text-center"><span class="badge bg-warning">OUT OF STOCK !! </span></h3>
                              <% } %> 
                      </div>
                    </div>
      
                  <% } %> 
          </div> 
    </div>
