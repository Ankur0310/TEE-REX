<% layout('layouts/boilerplate') %> 
<div class="row">
    <h1 class="text-center">Add a new TShirt Design</h1>
    <div class="col-md-6 offset-md-3">

        <form action="/tshirts" method="post" enctype="multipart/form-data" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="tshirt[title]" id="title" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="discount">Discount</label>
                <div class="input-group">
                    <input class="form-control" type="number" name="tshirt[discount]" id="discount" placeholder="0.00" min="0" required>
                <span class="input-group-text" id="discount-label">%</span>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="sprice">Selling Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="discount-label"> &#8377; </span>
                <input class="form-control" type="number" name="tshirt[sprice]" id="sprice" placeholder="0.00" min="0" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="discount-label"> &#8377; </span>
                <input class="form-control" type="number" name="tshirt[price]" id="price" placeholder="0.00" min="0" required>
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="colour">Colour</label>
                <input class="form-control" type="text" name="tshirt[colour]" id="colour" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="material">Material</label>
                <input class="form-control" type="text" name="tshirt[material]" id="material" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image(s)</label>
                <input class="form-control" type="file" name="image" id="image" multiple required>
            </div>
            <div>
                <label class="form-label" for="description">Description</label><br>
                <textarea class="form-control" name="tshirt[description]" id="description" cols="30" rows="10" required></textarea>
            </div>
            <div>
                <button class="btn btn-success my-3">Add tshirt</button>
            </div>
        </form>
        <footer class="mb-4">
            <a href="/tshirts" class="btn btn-primary mt-auto">All designs</a> 
        </footer>

    </div>
</div>





    
    
    
   